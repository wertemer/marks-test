{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="container-fluid">
<div class="row">
	<div class="col-md-12">
		{% for message in app.flashes('notice') %}
			<div class="flash-notice">
				{{ message }}
			</div>
		{% endfor %}
	</div>
</div>
{{ form_start(form) }}
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			{{ form_label(form.login) }}<br>
		    {{ form_errors(form.login) }}<br>
		    {{ form_widget(form.login, {'attr': {'class': 'form-control'}}) }}<br>
		</div>
		<div class="col-md-4"></div>
	</div>
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			{{ form_label(form.password) }}<br>
		    {{ form_errors(form.password) }}<br>
		    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}<br>
		</div>
		<div class="col-md-4"></div>
	</div>
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<br>
			<input type = "submit" name = "submit" value = "Войти" class="btn btn-primary" >
			<a href="/login/adduser" class="btn btn-secondary">Регистрация</a>
		</div>
		<div class="col-md-4"></div>
	</div>
{{ form_end(form) }}
</div>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% endblock %}
